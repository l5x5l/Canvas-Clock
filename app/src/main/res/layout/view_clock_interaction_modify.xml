<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/viewbtn_start_point"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/thumb_1"/>

        <View
            android:id="@+id/viewbtn_middle_point"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/thumb_2"/>

        <View
            android:id="@+id/viewbtn_end_point"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/thumb_3"/>

        <View
            android:id="@+id/viewbtn_start_time_point"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/thumb_4"/>

        <View
            android:id="@+id/viewbtn_end_time_point"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/thumb_4"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivbtn_show_guideline"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_eye_visible"
            android:padding="@dimen/padding_small"
            android:tint="@color/border_color"
            android:layout_gravity="bottom|right"
            tools:ignore="RtlHardcoded" />

    </FrameLayout>
</layout>