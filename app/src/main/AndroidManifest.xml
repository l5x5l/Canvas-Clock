<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.canvasclock">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:name=".config.GlobalApplication"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CanvasClock"
        tools:targetApi="31">
        <activity
            android:name=".ui.page.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.page.clock_detail.ClockDetailActivity"/>
        <activity android:name=".ui.page.clock_modify_shape.ClockModifyShapeActivity"/>
        <activity android:name=".ui.page.clock_modify_single_part.ClockModifySinglePartActivity"/>
        <activity android:name=".ui.page.clock_modify_handle.ClockModifyHandleActivity"/>
        <activity android:name=".ui.page.clock_list.ClockListActivity"/>
        <activity android:name=".ui.page.clock_mode.ClockModeActivity"/>
    </application>

</manifest>